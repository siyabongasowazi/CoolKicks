@model Sneaker

<h3 class="my-5">
    @Model.SneakerName
</h3>

<div class="row gx-5">
    <img alt="@Model.SneakerName" src="@Model.ImageUrl" class="img-fluid col-5" />
    <div class="col-7">
        <h4>@Model.SneakerShortDescription</h4>
        <p>@Model.SneakerLongDescription</p>
        <h3 class="pull-right">@Model.Price.ToString("c")</h3>
        <div class="addToCart">
            <p class="button">

            </p>
        </div>
    </div>
</div>