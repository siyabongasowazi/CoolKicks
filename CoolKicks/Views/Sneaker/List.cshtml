@model SneakerListViewModel

@{
    Layout = "_Layout";
}

<h1>@Model.CurrentBrand</h1>
<div class="row row-cols-1 row-cols-md-3 g-4">
    @foreach (var sneaker in Model.Sneakers)
    {
        <div class="col">
            <div class="card pie-card">
                <img src="@sneaker.ImageThumbnailUrl" class="card-img-top" alt="@sneaker.SneakerName">
                <div class="card-body pie-button">
                    <h4 class="d-grid">
                    </h4>
                    <div class="d-flex justify-content-between mt-2">
                        <h2 class="text-start">
                            <a class="pie-link" asp-controller="Sneaker" asp-action="Details" asp-route-id="@sneaker.SneakerID">@sneaker.SneakerName</a>
                        </h2>
                        <h5 class="text-nowrap">
                            @sneaker.Price.ToString("c")
                        </h5>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
